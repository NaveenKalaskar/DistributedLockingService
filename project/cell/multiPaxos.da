                          # that completed it 
        active = False
        proposals = set()
        slot_num = 0
        myparent = parent
        nreplicas = len(replicas)
        leadlock = True # this is the leader lock
        isLeader = True
        
            
    def OnDie(leadid,newleader):
        isLeader = False
        send(leadDie(leadid,newleader),parent)
        
    def main():
        spawn(Scout, [self, acceptors, ballot_num,slot_num])
        spawn(KeepAliveP,[replicas,5,1,myid,self])
