class KeepAliveP(DistProcess):
       
       # This thread sends keep alive messages to replicas this thread is 
       # spawned by leader.
       # for each replica at every regular interval, update its leader alive counter
       # by fixed value.
       # sleep for fixed amount of time.

       def setup(replicas,timetosleep,lcount,lleadid,lparent):
           output("called set up of KeepAliveP")
           leadid = lleadid
           count =  lcount
           parent = lparent
           notLeader = True
           counter = 0
           
       def keepAlive():
           if(notLeader):
                sleep(1)
                --yielda
                output("Sending KeepAlive from KeepAliveP")
                send(KeepAlive(counter,leadid),replicas)
                output("returning after send")
                counter = counter + count
                --yieldb
                return False
           else:
                output("In the bloody false")
                return False

       def die(newleader):
           output("In die of KeepAliveP")
           send(Die(leadid,newleader),parent)
           notLeader = True
       
       def main():
           output("In keepAliveP main")
           await(keepAlive())
           output("after await")
           

